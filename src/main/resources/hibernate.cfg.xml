<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/mi_base</property>
        <property name="hibernate.connection.username">admin</property>
        <property name="hibernate.connection.password">admin123</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Show and format SQL in console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.current_session_context_class">thread</property>
        

        <!-- Mapping resources -->
        <!-- Or <mapping resource="com/example/MyEntity.hbm.xml"/> -->
        <mapping class="org.uv.tcswpractica03.Empleados"/>
        <mapping class="org.uv.tcswpractica03.Departamentos"/>

    </session-factory>
</hibernate-configuration>